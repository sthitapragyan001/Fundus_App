<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Thin Taskbar for Home, Refresh, and Time -->
    <RelativeLayout
        android:id="@+id/top_taskbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F5F5"
        android:elevation="4dp"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/home_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toEndOf="@id/home_button"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Refresh"
            android:src="@android:drawable/ic_menu_rotate"
            app:tint="@android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/refresh_button"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED 1" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LED 2" />
        </LinearLayout>

        <ImageView
            android:id="@+id/connection_status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/taskbar_time"
            android:src="@android:drawable/ic_notification_overlay" />

        <TextClock
            android:id="@+id/taskbar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:format12Hour="h:mm a"
            android:format24Hour="HH:mm"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- Container for WebViews -->
    <LinearLayout
        android:id="@+id/webview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_taskbar"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <WebView
            android:id="@+id/webview1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:id="@+id/divider"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <WebView
            android:id="@+id/webview2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Initial view with Image, Title, and Connect Button -->
    <LinearLayout
        android:id="@+id/initial_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_launcher_foreground"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fundus Imager"
            android:textColor="@android:color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/time_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:format12Hour="h:mm a"
            android:format24Hour="HH:mm"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextClock
            android:id="@+id/date_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:format12Hour="EEEE, MMMM d"
            android:format24Hour="EEEE, MMMM d"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="32dp"
            android:paddingTop="16dp"
            android:paddingRight="32dp"
            android:paddingBottom="16dp"
            android:text="Connect to Device"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:backgroundTint="#2196F3"
            app:cornerRadius="28dp" />
    </LinearLayout>

    <!-- Connecting/Loading View -->
    <LinearLayout
        android:id="@+id/connecting_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Connecting to device..."
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Error View -->
    <LinearLayout
        android:id="@+id/error_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connection Failed"
            android:textColor="#D32F2F"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Could not connect to the device."
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/retry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Try Again" />
    </LinearLayout>

</RelativeLayout>
